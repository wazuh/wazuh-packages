# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "centos/7"
  config.vm.hostname = "wazuhmanager"
  config.vm.provider "virtualbox" do |vb|
    vb.name = "vm_wazuh"
    vb.memory = "4096"
    vb.cpus = "4"
  end

  config.vm.synced_folder "./", "/vagrant", type: "rsync", rsync__auto: true, rsync__exclude: ['./output/']
  config.vm.provision :shell, path: "provision.sh", :args => "#{ENV['WAZUH_VERSION']} #{ENV['OPENDISTRO_VERSION']}  #{ENV['ELK_VERSION']}  #{ENV['PACKAGES_REPOSITORY']} #{ENV['BRANCH']} #{ENV['BRANCHDOC']} -d"
end
